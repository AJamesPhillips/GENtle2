<div class="container-fluid container-special">
  <div class="row">
    <div class="col-md-12">
    <br/>

      <div class="row">
        <div class="col-md-2">
        <br/>
          <ul class="nav nav-pills">
            <li class="active"><a href="#home-tab-new" data-toggle="pill">New sequence</a></li>
            <li><a href="#home-tab-open" data-toggle="pill">Open from disk</a></li>
          </ul>
        </div>

        <div class="col-md-10">
          <div class="tab-content">
            <div class="tab-pane active" id="home-tab-new">
              <form id='home-tab-new-form'>
                <h3>Create a new sequence</h3>
                <br/>
                <div>
                  <div class="row">
                    <div class="col-md-7">
                      <input type="text" name="name" placeholder="Sequence name" class="form-control"/>
                    </div>
                  </div>
                  <br/>
                  <div class="row">
                    <div class="col-md-7">
                      <textarea class="form-control" placeholder="Enter sequence" name="sequence" rows="5" required="required"></textarea>
                      <br/>
                    </div>
                    <div class="col-md-4">
                      <p class="help-block">
                        You can enter or paste sequence data in plain text, FASTA, GenBank, or SYBIL format.
                      </p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-7">
                      <input type="submit" value="Create sequence" class="btn btn-primary"/>
                    </div>
                  </div>
                </div>
              </form>
            </div>

            <div class="tab-pane" id="home-tab-open">
              <form id='home-tab-open-form'>
                <h3>Open an existing sequence from disk</h3>
                <br/>
                <div>
                  <div class="row">
                    <div class="col-md-7">
                      <input type="file" name="file" class="form-control" require="required"/>
                    </div>
                    <div class="col-md-4">
                      <p class="help-block">
                        You can select a file in plain text, FASTA, GenBank, or SYBIL format.
                        <br/>
                        The sequence name will be infered from the file name.
                      </p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-7">
                      <input type="submit" value="Open sequence" class="btn btn-primary"/>
                    </div>
                  </div>
                </div>
              </form>
            </div>


          </div>

        </div>



      </div>

    

    



    </div>
  </div>
</div>