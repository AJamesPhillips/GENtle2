<div id="pcr-list-outer-container">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="pcr-list-container"></div>
        <br>

        <form class="form-horizontal new-pcr-product-form">

          <div class="form-group">
            <label class="col-sm-6 control-label" for="newProduct_name"><small>Product name</small></label>
            <div class="col-sm-6">
              <input type="text" class="form-control input-sm" id="newProduct_name" maxlength="255" required="required">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-6 control-label" for="newProduct_from"><small>From base – To base</small></label>
            <div class="col-sm-6">
              <div class="row">
                <div class="col-sm-6">
                  <input type="number" class="form-control input-sm" id="newProduct_from" placeholder="{{plus defaults.from 1}}" value="{{plus defaults.from 1}}" required="required">
                </div>
                <div class="col-sm-6">
                  <input type="number" class="form-control input-sm" id="newProduct_to" placeholder="{{plus defaults.to 1}}" value="{{plus defaults.to 1}}" required="required">
                </div>
              </div>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-6 control-label" for="newProduct_targetMeltingTemperature"><small>Target melting temperature (&deg;C)</small></label>
            <div class="col-sm-6">
              <input type="number" class="form-control input-sm" id="newProduct_targetMeltingTemperature" placeholder="{{defaults.targetMeltingTemperature}}" value="{{defaults.targetMeltingTemperature}}" required="required">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-6 control-label" for="newProduct_stickyEnds"><small>Sticky ends</small></label>
            <div class="col-sm-6">
              {{{select availableStickyEnds id="newProduct_stickyEnds" class="col-sm-6 form-control input-sm"}}}
            </div>
          </div>

          <button class="create-new-pcr-product btn btn-primary">Create new PCR product</button>

        </form>
        <br>
        <br>


      </div>
    </div>
  </div>
</div>
<div id="pcr-canvas-container"></div>
