<div id="pcr-list-outer-container">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="pcr-list-container"></div>
        <br>

        <form class="form-horizontal new-pcr-product-form">

          <div class="form-group">
            <label class="col-sm-6 control-label" for="newProduct_name">Product name</label>
            <div class="col-sm-6">
              <input type="text" class="form-control" id="newProduct_name" maxlength="255" required="required">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-6 control-label" for="newProduct_from">From base – To base</label>
            <div class="col-sm-6">
              <div class="row">
                <div class="col-sm-6">
                  <input type="number" class="form-control" id="newProduct_from" placeholder="0" value="{{defaultFrom}}" required="required">
                </div>
                <div class="col-sm-6">
                  <input type="number" class="form-control" id="newProduct_to" placeholder="{{defaultTo}}" value="{{defaultTo}}" required="required">
                </div>
              </div>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-6 control-label" for="newProduct_meltingTemperature">Target primer melting temperature (&deg;C)</label>
            <div class="col-sm-6">
              <input type="number" class="form-control" id="newProduct_meltingTemperature" placeholder="{{defaultTemperature}}" value="{{defaultTemperature}}" required="required">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-6 control-label" for="newProduct_stickyEnds">Sticky ends</label>
            <div class="col-sm-6">
              {{{select availableStickyEnds id="newProduct_stickyEnds" class="col-sm-6 form-control"}}}
            </div>
          </div>

          <button class="create-new-pcr-product btn btn-primary">Create new PCR product</button>

        </form>
        <br>
        <br>


      </div>
    </div>
  </div>
</div>
<div id="pcr-canvas-container"></div>
