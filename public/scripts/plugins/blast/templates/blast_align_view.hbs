{{#if result}}
  <div class="blast-align-header">
    {{#if mismatchCount}}
      <a href="#" class="next-mismatch btn btn-default btn-xs pull-right">Highlight next mismatch</a>
      <small class="text-danger">
        <strong>
          {{pluralCount mismatchCount 'mismatch' 'mismatches'}}
        <strong>
      </small>
    {{else}}
      <small class="text-muted">0 mismatches</small>
    {{/if}}
  </div>
{{/if}}
<div class="sequence-canvas-wrapper">
  <div class="sequence-canvas-container">
    <canvas id="canvas_{{id}}" class="sequence-canvas" />
  </div>
  <div class="scrolling-parent" tabindex="1">
    <div class="scrolling-child">
      <div id="sequence-canvas-context-menu-outlet"></div>
    </div>
  </div>
</div>