<form role="form">
  <div class="form-group{{#if error.name}} has-error{{/if}}">
    <label for="Name">Sequence Name</label>
    <input type="text" class="form-control" id="name" value="{{Name}}"{{#if readOnly}} disabled{{/if}}>
  </div>
  <div class="form-group">
    <label for="Desc">Description</label>
    <textarea type="text" class="form-control" style="resize:none" rows="4" id="desc"{{#if readOnly}} disabled{{/if}}>{{Desc}}</textarea>
  </div>
  <div class="form-group">
    <label class="radio-inline" style="width: 40%;">
      <input type="radio" value="true" name="isCircular" {{#if isCircular}}checked="checked"{{/if}}>
      <strong>Circular</strong>
    </label>
    <label class="radio-inline">
      <input type="radio" value="false" name="isCircular" {{#unless isCircular}}checked="checked"{{/unless}}>
      <strong>Linear</strong>
    </label>
  </div>

  {{#unless readOnly}}
    <input type="button" value="Save" class="sequence-save-button btn btn-primary pull-right" required>
  {{/unless}}
</form>